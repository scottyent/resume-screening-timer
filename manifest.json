{
    "manifest_version": 3,
    "name": "Resume Screening Timer",
    "version": "1.0",
    "description": "Starts a timer based on loading application review in Greenhouse.",
    "icons": {
        "128": "icon.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "permissions": [
        "activeTab",
        "storage",
        "alarms",
        "notifications",
        "scripting"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "web_accessible_resources": [{
        "resources": [
            "timerDisplay.html",
            "chime.mp3"
        ],
        "matches": [
            "https://*/*",
            "http://*/*"
        ]
    }],
    "content_scripts": [
        {
            "matches": ["https://*/*", "http://*/*"],
            "js": ["timerDisplay.js"],
            "css": ["timerDisplay.css"]
        }
    ]
}